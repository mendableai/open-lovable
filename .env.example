# Required API Keys for Open Lovable

# E2B API Key (for sandboxes) - Get from https://e2b.dev
E2B_API_KEY=your_e2b_api_key_here

# Firecrawl API Key (for web scraping) - Get from https://firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# AI Model API Keys (need at least one)
# OpenAI API Key - Get from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key - Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Key - Get from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# App URL (set this to your deployed domain)
NEXT_PUBLIC_APP_URL=https://your-domain.pages.dev

# Feature flags
ENABLE_APPLY_AI_CODE_STREAM=true
ENABLE_DETECT_INSTALL=true