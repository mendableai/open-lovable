# Environment Configuration for Open Lovable
# Copy this file to .env.local and fill in your values

# ========== Logging Configuration ==========
# Log Level: ERROR, WARN, INFO, DEBUG, TRACE
# Development: DEBUG, Production: INFO
LOG_LEVEL=DEBUG

# ========== AI Model Configuration ==========
# Default AI model for code generation
DEFAULT_AI_MODEL=openai/gpt-4

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key_here

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# ========== E2B Sandbox Configuration ==========
# E2B Code Interpreter API Key
E2B_API_KEY=your_e2b_api_key_here

# ========== Application Configuration ==========
# Application URL (auto-detected in most cases)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudflare Pages URL (for production)
CF_PAGES_URL=https://your-app.pages.dev

# ========== Database Configuration (Optional) ==========
# Cloudflare D1 Database (for user data, sessions, etc.)
# DATABASE_URL=your_d1_database_url

# Cloudflare KV Namespace (for caching, temporary data)
# KV_NAMESPACE=your_kv_namespace_id

# ========== Security Configuration ==========
# JWT Secret for session management (optional)
# JWT_SECRET=your_jwt_secret_here

# API Rate Limiting (requests per minute)
# RATE_LIMIT_RPM=60

# ========== Development Configuration ==========
# Disable telemetry in development
NEXT_TELEMETRY_DISABLED=1

# Skip environment validation (for development)
SKIP_ENV_VALIDATION=true

# Node.js version for build
NODE_VERSION=20

# ========== Cloudflare Specific ==========
# Browser Rendering API (for screenshots)
# BROWSER_RENDERING_API=your_browser_api_key

# Cloudflare Analytics (optional)
# CF_ANALYTICS_TOKEN=your_analytics_token